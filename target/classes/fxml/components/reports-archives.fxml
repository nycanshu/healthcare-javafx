<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.healthcare.controller.components.ReportsArchivesController"
      spacing="20.0" style="-fx-background-color: #f4f7f6; -fx-padding: 20;">
   <children>
      <!-- Header Section -->
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Reports &amp; Archives" />
            <Region HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      
      <!-- Reports Section -->
      <VBox spacing="15.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
         <children>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Export Reports" />
            <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Click any button below to download a CSV report with timestamp" />
            
            <HBox alignment="CENTER_LEFT" spacing="15.0">
               <children>
                  <Button fx:id="exportStaffButton" onAction="#exportStaffReport" 
                          style="-fx-background-color: #3498DB; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 12 20; -fx-font-weight: bold; -fx-cursor: hand;" 
                          text="Export Staff Report" />
                  
                  <Button fx:id="exportResidentButton" onAction="#exportResidentReport" 
                          style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 12 20; -fx-font-weight: bold; -fx-cursor: hand;" 
                          text="Export Resident Report" />
                  
                  <Button fx:id="exportAuditButton" onAction="#exportAuditReport" 
                          style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 12 20; -fx-font-weight: bold; -fx-cursor: hand;" 
                          text="Export Audit Report" />
                  
                  <Button fx:id="exportShiftButton" onAction="#exportShiftReport" 
                          style="-fx-background-color: #9B59B6; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 12 20; -fx-font-weight: bold; -fx-cursor: hand;" 
                          text="Export Shift Schedule Report" />
               </children>
            </HBox>
         </children>
      </VBox>
      
      <!-- Archives Section -->
      <VBox spacing="15.0" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="20.0">
               <children>
                  <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;" text="Archived Residents" />
                  <Region HBox.hgrow="ALWAYS" />
                  <Label fx:id="archiveCountLabel" style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Total: 0" />
               </children>
            </HBox>
            
            <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="View-only list of discharged residents (archived for audit compliance)" />
            
            <!-- Archived Residents Table -->
            <TableView fx:id="archivesTable" VBox.vgrow="ALWAYS" style="-fx-background-color: #f8f9fa; -fx-background-radius: 5;">
               <columns>
                  <TableColumn fx:id="archivedNameColumn" prefWidth="200.0" text="Name" />
                  <TableColumn fx:id="archivedGenderColumn" prefWidth="80.0" text="Gender" />
                  <TableColumn fx:id="archivedAgeColumn" prefWidth="60.0" text="Age" />
                  <TableColumn fx:id="archivedAdmissionDateColumn" prefWidth="120.0" text="Admission Date" />
                  <TableColumn fx:id="archivedDischargeDateColumn" prefWidth="120.0" text="Discharge Date" />
                  <TableColumn fx:id="archivedBedColumn" prefWidth="100.0" text="Last Bed" />
                  <TableColumn fx:id="archivedReasonColumn" prefWidth="150.0" text="Discharge Reason" />
               </columns>
               <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>
         </children>
      </VBox>
   </children>
</VBox>
