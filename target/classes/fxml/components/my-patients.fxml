<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.healthcare.controller.components.MyPatientsController" spacing="10.0" style="-fx-background-color: #f4f7f6; -fx-padding: 20;">
   <children>
      <!-- Header Section -->
      <HBox alignment="CENTER_LEFT" spacing="20.0">
         <children>
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333;" text="My Patients" />
            <Region HBox.hgrow="ALWAYS" />
            <Label fx:id="totalPatientsLabel" style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Total: 0" />
         </children>
      </HBox>

      <!-- Search and Filter Section -->
      <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
         <children>
            <Label text="Search:" style="-fx-text-fill: #555; -fx-font-weight: bold;" />
            <TextField fx:id="searchField" prefWidth="200.0" promptText="Search by name or condition..." />
            <Label text="Filter by Status:" style="-fx-text-fill: #555; -fx-font-weight: bold;" />
            <ComboBox fx:id="statusFilterComboBox" prefWidth="150.0" promptText="All Status" />
            <Button fx:id="searchButton" onAction="#searchPatients" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="Search" />
            <Button fx:id="clearButton" onAction="#clearFilters" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="Clear" />
         </children>
      </HBox>

      <!-- Main Content Section -->
      <VBox spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <!-- Patients Table -->
            <TableView fx:id="patientsTable" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
               <columns>
                  <TableColumn fx:id="patientNameColumn" prefWidth="200.0" text="Patient Name" />
                  <TableColumn fx:id="ageColumn" prefWidth="80.0" text="Age" />
                  <TableColumn fx:id="genderColumn" prefWidth="80.0" text="Gender" />
                  <TableColumn fx:id="admissionDateColumn" prefWidth="120.0" text="Admission Date" />
                  <TableColumn fx:id="medicalConditionColumn" prefWidth="250.0" text="Medical Condition" />
                  <TableColumn fx:id="bedColumn" prefWidth="120.0" text="Bed" />
                  <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                  <TableColumn fx:id="actionsColumn" prefWidth="150.0" text="Actions" />
               </columns>
               <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>

            <!-- Pagination -->
            <HBox alignment="CENTER" spacing="10.0" style="-fx-background-color: white; -fx-padding: 10; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 2);">
               <children>
                  <Button fx:id="firstPageButton" onAction="#goToFirstPage" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="First" />
                  <Button fx:id="prevPageButton" onAction="#goToPreviousPage" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="Previous" />

                  <Label fx:id="pageInfoLabel" text="Page 1 of 1" style="-fx-font-weight: bold; -fx-text-fill: #333;" />

                  <Button fx:id="nextPageButton" onAction="#goToNextPage" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="Next" />
                  <Button fx:id="lastPageButton" onAction="#goToLastPage" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 5; -fx-cursor: hand;" text="Last" />

                  <Region HBox.hgrow="ALWAYS" />

                  <Label text="Items per page:" style="-fx-text-fill: #555;" />
                  <ComboBox fx:id="itemsPerPageComboBox" prefWidth="80.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
