<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="25" xmlns="http://javafx.com/javafx/11.0.1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.healthcare.controller.components.StaffManagementController"
      style="-fx-padding: 25; -fx-background-color: #ffffff;">
   
   <children>
      <!-- Title -->
      <Label text="👨‍⚕️ Staff Management" textFill="#2E86AB" 
             style="-fx-font-size: 24px; -fx-font-weight: bold;" />

      <!-- Staff Count Cards -->
      <GridPane hgap="20" vgap="20">
         <columnConstraints>
            <ColumnConstraints minWidth="200" hgrow="ALWAYS" />
            <ColumnConstraints minWidth="200" hgrow="ALWAYS" />
            <ColumnConstraints minWidth="200" hgrow="ALWAYS" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="120" />
         </rowConstraints>
         <children>
            <!-- Managers Card -->
            <VBox alignment="CENTER" spacing="10" 
                  style="-fx-background-color: #E8F4FD; -fx-padding: 20; 
                         -fx-border-color: #2E86AB; -fx-border-width: 1; 
                         -fx-border-radius: 8; -fx-background-radius: 8;" 
                  GridPane.columnIndex="0">
               <children>
                  <Label text="👨‍💼" style="-fx-font-size: 32px;" />
                  <Label fx:id="managersCountLabel" text="0" textFill="#2E86AB" 
                         style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                  <Label text="Managers" textFill="#2E86AB" 
                         style="-fx-font-size: 14px; -fx-font-weight: bold;" />
               </children>
            </VBox>
            
            <!-- Doctors Card -->
            <VBox alignment="CENTER" spacing="10" 
                  style="-fx-background-color: #FDF2E8; -fx-padding: 20; 
                         -fx-border-color: #F18F01; -fx-border-width: 1; 
                         -fx-border-radius: 8; -fx-background-radius: 8;" 
                  GridPane.columnIndex="1">
               <children>
                  <Label text="👨‍⚕️" style="-fx-font-size: 32px;" />
                  <Label fx:id="doctorsCountLabel" text="0" textFill="#F18F01" 
                         style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                  <Label text="Doctors" textFill="#F18F01" 
                         style="-fx-font-size: 14px; -fx-font-weight: bold;" />
               </children>
            </VBox>
            
            <!-- Nurses Card -->
            <VBox alignment="CENTER" spacing="10" 
                  style="-fx-background-color: #E8F5E8; -fx-padding: 20; 
                         -fx-border-color: #2ECC71; -fx-border-width: 1; 
                         -fx-border-radius: 8; -fx-background-radius: 8;" 
                  GridPane.columnIndex="2">
               <children>
                  <Label text="👩‍⚕️" style="-fx-font-size: 32px;" />
                  <Label fx:id="nursesCountLabel" text="0" textFill="#2ECC71" 
                         style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                  <Label text="Nurses" textFill="#2ECC71" 
                         style="-fx-font-size: 14px; -fx-font-weight: bold;" />
               </children>
            </VBox>
         </children>
      </GridPane>

      <!-- Quick Actions -->
      <VBox spacing="15">
         <children>
            <Label text="Quick Actions" textFill="#2E86AB" 
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            
            <HBox spacing="15" alignment="CENTER_LEFT">
               <children>
                  <Button fx:id="addStaffButton" text="➕ Add New Staff" 
                          style="-fx-background-color: #2ECC71; -fx-text-fill: white; 
                                 -fx-background-radius: 8; -fx-padding: 12 24; 
                                 -fx-font-weight: bold; -fx-font-size: 14px;" 
                          onAction="#showAddStaffForm" />
                  
                  <Button fx:id="refreshStaffButton" text="🔄 Refresh List" 
                          style="-fx-background-color: #3498DB; -fx-text-fill: white; 
                                 -fx-background-radius: 8; -fx-padding: 12 24; 
                                 -fx-font-weight: bold; -fx-font-size: 14px;" 
                          onAction="#refreshStaffList" />
               </children>
            </HBox>
         </children>
      </VBox>
      
      <!-- Current Staff Section -->
      <VBox spacing="15">
         <children>
            <!-- Header with Search -->
            <HBox spacing="15" alignment="CENTER_LEFT">
               <children>
                  <Label text="📋 Current Staff Members" textFill="#34495E" 
                         style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                  
                  <Region HBox.hgrow="ALWAYS" />
                  
                  <TextField fx:id="searchField" promptText="Search staff..." 
                             style="-fx-background-radius: 6; -fx-border-radius: 6; 
                                    -fx-border-color: #DEE2E6; -fx-border-width: 1; 
                                    -fx-padding: 8 12;" 
                             prefWidth="250" />
               </children>
            </HBox>
            
            <!-- Staff Table -->
            <TableView fx:id="staffTable" prefHeight="400" VBox.vgrow="ALWAYS"
                       style="-fx-border-color: #dfe6e9; -fx-border-width: 1; 
                              -fx-background-radius: 8; -fx-border-radius: 8;">
               <columns>
                  <TableColumn fx:id="staffIdColumn" text="ID" />
                  <TableColumn fx:id="nameColumn" text="Name" />
                  <TableColumn fx:id="usernameColumn" text="Username" />
                  <TableColumn fx:id="roleColumn" text="Role" />
                  <TableColumn fx:id="actionsColumn" text="Actions" />
               </columns>
            </TableView>
         </children>
      </VBox>
      
      <!-- Add/Edit Staff Form -->
      <VBox fx:id="staffFormContainer" visible="false" managed="false" spacing="20" 
            style="-fx-background-color: #F8F9FA; -fx-padding: 25; 
                   -fx-border-color: #DEE2E6; -fx-border-width: 1; 
                   -fx-border-radius: 10; -fx-background-radius: 10;">
         <children>
            <Label fx:id="formTitleLabel" text="Add New Staff Member" textFill="#2E86AB" 
                   style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            
            <GridPane hgap="20" vgap="15">
               <columnConstraints>
                  <ColumnConstraints hgrow="NEVER" minWidth="120" />
                  <ColumnConstraints hgrow="ALWAYS" />
                  <ColumnConstraints hgrow="NEVER" minWidth="120" />
                  <ColumnConstraints hgrow="ALWAYS" />
               </columnConstraints>
               
               <!-- Row 0: Username and First Name -->
               <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" 
                      style="-fx-font-weight: bold;" />
               <TextField fx:id="usernameField" promptText="Enter username" 
                          GridPane.columnIndex="1" GridPane.rowIndex="0" 
                          style="-fx-background-radius: 6; -fx-border-radius: 6; 
                                 -fx-border-color: #DEE2E6; -fx-border-width: 1; 
                                 -fx-padding: 8 12;" />
               
               <Label text="First Name:" GridPane.columnIndex="2" GridPane.rowIndex="0" 
                      style="-fx-font-weight: bold;" />
               <TextField fx:id="firstNameField" promptText="Enter first name" 
                          GridPane.columnIndex="3" GridPane.rowIndex="0" 
                          style="-fx-background-radius: 6; -fx-border-radius: 6; 
                                 -fx-border-color: #DEE2E6; -fx-border-width: 1; 
                                 -fx-padding: 8 12;" />
               
               <!-- Row 1: Password and Last Name -->
               <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" 
                      style="-fx-font-weight: bold;" />
               <PasswordField fx:id="passwordField" promptText="Enter password" 
                              GridPane.columnIndex="1" GridPane.rowIndex="1" 
                              style="-fx-background-radius: 6; -fx-border-radius: 6; 
                                     -fx-border-color: #DEE2E6; -fx-border-width: 1; 
                                     -fx-padding: 8 12;" />
               
               <Label text="Last Name:" GridPane.columnIndex="2" GridPane.rowIndex="1" 
                      style="-fx-font-weight: bold;" />
               <TextField fx:id="lastNameField" promptText="Enter last name" 
                          GridPane.columnIndex="3" GridPane.rowIndex="1" 
                          style="-fx-background-radius: 6; -fx-border-radius: 6; 
                                 -fx-border-color: #DEE2E6; -fx-border-width: 1; 
                                 -fx-padding: 8 12;" />
               
               <!-- Row 2: Role and Email -->
               <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="2" 
                      style="-fx-font-weight: bold;" />
               <ComboBox fx:id="roleComboBox" promptText="Select role" 
                         GridPane.columnIndex="1" GridPane.rowIndex="2" 
                         style="-fx-background-radius: 6; -fx-border-radius: 6; 
                                -fx-border-color: #DEE2E6; -fx-border-width: 1;" />
               
               <Label text="Email:" GridPane.columnIndex="2" GridPane.rowIndex="2" 
                      style="-fx-font-weight: bold;" />
               <TextField fx:id="emailField" promptText="Enter email" 
                          GridPane.columnIndex="3" GridPane.rowIndex="2" 
                          style="-fx-background-radius: 6; -fx-border-radius: 6; 
                                 -fx-border-color: #DEE2E6; -fx-border-width: 1; 
                                 -fx-padding: 8 12;" />
               
               <!-- Row 3: Phone (spans two columns) -->
               <Label text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="3" 
                      style="-fx-font-weight: bold;" />
               <TextField fx:id="phoneField" promptText="Enter phone number" 
                          GridPane.columnIndex="1" GridPane.rowIndex="3" 
                          GridPane.columnSpan="3"
                          style="-fx-background-radius: 6; -fx-border-radius: 6; 
                                 -fx-border-color: #DEE2E6; -fx-border-width: 1; 
                                 -fx-padding: 8 12;" />
            </GridPane>
            
            <HBox spacing="15" alignment="CENTER_LEFT">
               <children>
                  <Button fx:id="saveStaffButton" text="💾 Save Staff" 
                          style="-fx-background-color: #2ECC71; -fx-text-fill: white; 
                                 -fx-background-radius: 8; -fx-padding: 10 20; 
                                 -fx-font-weight: bold; -fx-font-size: 14px;" 
                          onAction="#saveStaff" />
                  
                  <Button fx:id="cancelStaffButton" text="❌ Cancel" 
                          style="-fx-background-color: #E74C3C; -fx-text-fill: white; 
                                 -fx-background-radius: 8; -fx-padding: 10 20; 
                                 -fx-font-weight: bold; -fx-font-size: 14px;" 
                          onAction="#cancelStaffForm" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
