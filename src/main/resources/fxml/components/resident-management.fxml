<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="25" xmlns="http://javafx.com/javafx/11.0.1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.healthcare.controller.components.ResidentManagementController"
      style="-fx-padding: 25; -fx-background-color: #ffffff;">
   
   <children>
      <!-- Title -->
      <Label text="🏠 Resident Management" textFill="#2E86AB" 
             style="-fx-font-size: 24px; -fx-font-weight: bold;" />

      <!-- Resident Count Cards -->
      <GridPane hgap="20" vgap="20">
         <columnConstraints>
            <ColumnConstraints minWidth="200" hgrow="ALWAYS" />
            <ColumnConstraints minWidth="200" hgrow="ALWAYS" />
            <ColumnConstraints minWidth="200" hgrow="ALWAYS" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="120" />
         </rowConstraints>
         <children>
            <!-- Active Residents Card -->
            <VBox alignment="CENTER" spacing="10" 
                  style="-fx-background-color: #E8F4FD; -fx-padding: 20; 
                         -fx-border-color: #2E86AB; -fx-border-width: 1; 
                         -fx-border-radius: 8; -fx-background-radius: 8;" 
                  GridPane.columnIndex="0">
               <children>
                  <Label text="👥" style="-fx-font-size: 32px;" />
                  <Label fx:id="activeResidentsCountLabel" text="0" textFill="#2E86AB" 
                         style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                  <Label text="Active Residents" textFill="#2E86AB" 
                         style="-fx-font-size: 14px; -fx-font-weight: bold;" />
               </children>
            </VBox>
            
            <!-- Discharged Residents Card -->
            <VBox alignment="CENTER" spacing="10" 
                  style="-fx-background-color: #FDF2E8; -fx-padding: 20; 
                         -fx-border-color: #F18F01; -fx-border-width: 1; 
                         -fx-border-radius: 8; -fx-background-radius: 8;" 
                  GridPane.columnIndex="1">
               <children>
                  <Label text="🏥" style="-fx-font-size: 32px;" />
                  <Label fx:id="dischargedResidentsCountLabel" text="0" textFill="#F18F01" 
                         style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                  <Label text="Discharged" textFill="#F18F01" 
                         style="-fx-font-size: 14px; -fx-font-weight: bold;" />
               </children>
            </VBox>
            
            <!-- Available Beds Card -->
            <VBox alignment="CENTER" spacing="10" 
                  style="-fx-background-color: #E8F5E8; -fx-padding: 20; 
                         -fx-border-color: #2ECC71; -fx-border-width: 1; 
                         -fx-border-radius: 8; -fx-background-radius: 8;" 
                  GridPane.columnIndex="2">
               <children>
                  <Label text="🛏️" style="-fx-font-size: 32px;" />
                  <Label fx:id="availableBedsCountLabel" text="0" textFill="#2ECC71" 
                         style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                  <Label text="Available Beds" textFill="#2ECC71" 
                         style="-fx-font-size: 14px; -fx-font-weight: bold;" />
               </children>
            </VBox>
         </children>
      </GridPane>

      <!-- Quick Actions -->
      <VBox spacing="15">
         <children>
            <Label text="Quick Actions" textFill="#2E86AB" 
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            
            <HBox spacing="15" alignment="CENTER_LEFT">
               <children>
                  <Button fx:id="admitResidentButton" text="➕ Admit New Resident" 
                          style="-fx-background-color: #2ECC71; -fx-text-fill: white; 
                                 -fx-background-radius: 8; -fx-padding: 12 24; 
                                 -fx-font-weight: bold; -fx-font-size: 14px;" 
                          onAction="#showAdmitResidentForm" />
                  
                  <Button fx:id="refreshResidentsButton" text="🔄 Refresh List" 
                          style="-fx-background-color: #3498DB; -fx-text-fill: white; 
                                 -fx-background-radius: 8; -fx-padding: 12 24; 
                                 -fx-font-weight: bold; -fx-font-size: 14px;" 
                          onAction="#refreshResidentsList" />
                  
                  <Button fx:id="manageBedsButton" text="🛏️ Manage Beds" 
                          style="-fx-background-color: #9B59B6; -fx-text-fill: white; 
                                 -fx-background-radius: 8; -fx-padding: 12 24; 
                                 -fx-font-weight: bold; -fx-font-size: 14px;" 
                          onAction="#showBedManagement" />
               </children>
            </HBox>
         </children>
      </VBox>
      
      <!-- Assign Doctor Section -->
      <VBox spacing="15">
         <children>
            <Label text="👨‍⚕️ Assign Doctor to Patients" textFill="#2E86AB" 
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            
            <HBox spacing="15" alignment="CENTER_LEFT">
               <children>
                  <Label text="Select Doctor:" textFill="#34495E" 
                         style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                  
                  <ComboBox fx:id="doctorComboBox" promptText="Choose a doctor..." 
                            prefWidth="200" />
                  
                  <Label text="Select Patient:" textFill="#34495E" 
                         style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                  
                  <ComboBox fx:id="patientComboBox" promptText="Choose a patient..." 
                            prefWidth="200" />
                  
                  <Button fx:id="assignDoctorButton" text="🔗 Assign Doctor" 
                          style="-fx-background-color: #9B59B6; -fx-text-fill: white; 
                                 -fx-background-radius: 8; -fx-padding: 10 20; 
                                 -fx-font-weight: bold; -fx-font-size: 14px;" 
                          onAction="#assignDoctorToPatient" />
               </children>
            </HBox>
         </children>
      </VBox>
      
      <!-- Current Residents Section -->
      <VBox spacing="15">
         <children>
            <!-- Header with Search -->
            <HBox spacing="15" alignment="CENTER_LEFT">
               <children>
                  <Label text="📋 Current Residents" textFill="#34495E" 
                         style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                  
                  <Region HBox.hgrow="ALWAYS" />
                  
                  <ComboBox fx:id="statusFilterComboBox" promptText="Filter by status" 
                            style="-fx-background-radius: 6; -fx-border-radius: 6; 
                                   -fx-border-color: #DEE2E6; -fx-border-width: 1; 
                                   -fx-padding: 8 12;" 
                            prefWidth="150" />
                  
                  <TextField fx:id="searchField" promptText="Search residents..." 
                             style="-fx-background-radius: 6; -fx-border-radius: 6; 
                                    -fx-border-color: #DEE2E6; -fx-border-width: 1; 
                                    -fx-padding: 8 12;" 
                             prefWidth="250" />
               </children>
            </HBox>
            
            <!-- Residents Table -->
            <TableView fx:id="residentsTable" prefHeight="400" VBox.vgrow="ALWAYS"
                       style="-fx-border-color: #dfe6e9; -fx-border-width: 1; 
                              -fx-background-radius: 8; -fx-border-radius: 8;">
               <columns>
                  <TableColumn fx:id="nameColumn" text="Name" />
                  <TableColumn fx:id="genderColumn" text="Gender" />
                  <TableColumn fx:id="ageColumn" text="Age" />
                  <TableColumn fx:id="admissionDateColumn" text="Admission Date" />
                  <TableColumn fx:id="bedColumn" text="Bed" />
                  <TableColumn fx:id="statusColumn" text="Status" />
                  <TableColumn fx:id="actionsColumn" text="Actions" />
               </columns>
            </TableView>
         </children>
      </VBox>
      
      <!-- Admit/Edit Resident Form -->
      <VBox fx:id="residentFormContainer" visible="false" managed="false" spacing="20" 
            style="-fx-background-color: #F8F9FA; -fx-padding: 25; 
                   -fx-border-color: #DEE2E6; -fx-border-width: 1; 
                   -fx-border-radius: 10; -fx-background-radius: 10;">
         <children>
            <Label fx:id="formTitleLabel" text="Admit New Resident" textFill="#2E86AB" 
                   style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            
            <GridPane hgap="20" vgap="15">
               <columnConstraints>
                  <ColumnConstraints hgrow="NEVER" minWidth="120" />
                  <ColumnConstraints hgrow="ALWAYS" />
                  <ColumnConstraints hgrow="NEVER" minWidth="120" />
                  <ColumnConstraints hgrow="ALWAYS" />
               </columnConstraints>
               
               <Label text="First Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" 
                      style="-fx-font-weight: bold;" />
               <TextField fx:id="firstNameField" promptText="Enter first name" 
                          GridPane.columnIndex="1" GridPane.rowIndex="0" 
                          style="-fx-background-radius: 6; -fx-border-radius: 6; 
                                 -fx-border-color: #DEE2E6; -fx-border-width: 1; 
                                 -fx-padding: 8 12;" />
               
               <Label text="Last Name:" GridPane.columnIndex="2" GridPane.rowIndex="0" 
                      style="-fx-font-weight: bold;" />
               <TextField fx:id="lastNameField" promptText="Enter last name" 
                          GridPane.columnIndex="3" GridPane.rowIndex="0" 
                          style="-fx-background-radius: 6; -fx-border-radius: 6; 
                                 -fx-border-color: #DEE2E6; -fx-border-width: 1; 
                                 -fx-padding: 8 12;" />
               
               <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="1" 
                      style="-fx-font-weight: bold;" />
               <ComboBox fx:id="genderComboBox" promptText="Select gender" 
                         GridPane.columnIndex="1" GridPane.rowIndex="1" 
                         style="-fx-background-radius: 6; -fx-border-radius: 6; 
                                -fx-border-color: #DEE2E6; -fx-border-width: 1;" />
               
               <Label text="Birth Date:" GridPane.columnIndex="2" GridPane.rowIndex="1" 
                      style="-fx-font-weight: bold;" />
               <DatePicker fx:id="birthDatePicker" 
                           GridPane.columnIndex="3" GridPane.rowIndex="1" 
                           style="-fx-background-radius: 6; -fx-border-radius: 6; 
                                  -fx-border-color: #DEE2E6; -fx-border-width: 1;" />
               
               <Label text="Admission Date:" GridPane.columnIndex="0" GridPane.rowIndex="2" 
                      style="-fx-font-weight: bold;" />
               <DatePicker fx:id="admissionDatePicker" 
                           GridPane.columnIndex="1" GridPane.rowIndex="2" 
                           style="-fx-background-radius: 6; -fx-border-radius: 6; 
                                  -fx-border-color: #DEE2E6; -fx-border-width: 1;" />
               
               <Label text="Assign Bed:" GridPane.columnIndex="2" GridPane.rowIndex="2" 
                      style="-fx-font-weight: bold;" />
               <ComboBox fx:id="bedComboBox" promptText="Select bed (optional)" 
                         GridPane.columnIndex="3" GridPane.rowIndex="2" 
                         style="-fx-background-radius: 6; -fx-border-radius: 6; 
                                -fx-border-color: #DEE2E6; -fx-border-width: 1;" />
            </GridPane>
            
            <HBox spacing="15" alignment="CENTER_LEFT">
               <children>
                  <Button fx:id="saveResidentButton" text="💾 Save Resident" 
                          style="-fx-background-color: #2ECC71; -fx-text-fill: white; 
                                 -fx-background-radius: 8; -fx-padding: 10 20; 
                                 -fx-font-weight: bold; -fx-font-size: 14px;" 
                          onAction="#saveResident" />
                  
                  <Button fx:id="cancelResidentButton" text="❌ Cancel" 
                          style="-fx-background-color: #E74C3C; -fx-text-fill: white; 
                                 -fx-background-radius: 8; -fx-padding: 10 20; 
                                 -fx-font-weight: bold; -fx-font-size: 14px;" 
                          onAction="#cancelResidentForm" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
