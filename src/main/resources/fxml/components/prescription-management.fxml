<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="25" xmlns="http://javafx.com/javafx/11.0.1" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.healthcare.controller.components.PrescriptionManagementController"
      style="-fx-padding: 25; -fx-background-color: #ffffff;">
   
   <children>
      <!-- Title -->
      <Label text="💊 Prescription Management" textFill="#2E86AB" 
             style="-fx-font-size: 24px; -fx-font-weight: bold;" />

      <!-- Prescription Count Cards -->
      <GridPane hgap="20" vgap="20">
         <columnConstraints>
            <ColumnConstraints minWidth="200" hgrow="ALWAYS" />
            <ColumnConstraints minWidth="200" hgrow="ALWAYS" />
            <ColumnConstraints minWidth="200" hgrow="ALWAYS" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="120" />
         </rowConstraints>
         <children>
            <!-- Active Prescriptions Card -->
            <VBox alignment="CENTER" spacing="10" 
                  style="-fx-background-color: #E8F4FD; -fx-padding: 20; 
                         -fx-border-color: #2E86AB; -fx-border-width: 1; 
                         -fx-border-radius: 8; -fx-background-radius: 8;" 
                  GridPane.columnIndex="0">
               <children>
                  <Label text="💊" style="-fx-font-size: 32px;" />
                  <Label fx:id="activePrescriptionsLabel" text="0" textFill="#2E86AB" 
                         style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                  <Label text="Active Prescriptions" textFill="#2E86AB" 
                         style="-fx-font-size: 14px; -fx-font-weight: bold;" />
               </children>
            </VBox>
            
            <!-- Pending Reviews Card -->
            <VBox alignment="CENTER" spacing="10" 
                  style="-fx-background-color: #FDF2E8; -fx-padding: 20; 
                         -fx-border-color: #F18F01; -fx-border-width: 1; 
                         -fx-border-radius: 8; -fx-background-radius: 8;" 
                  GridPane.columnIndex="1">
               <children>
                  <Label text="⏳" style="-fx-font-size: 32px;" />
                  <Label fx:id="pendingReviewsLabel" text="0" textFill="#F18F01" 
                         style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                  <Label text="Pending Reviews" textFill="#F18F01" 
                         style="-fx-font-size: 14px; -fx-font-weight: bold;" />
               </children>
            </VBox>
            
            <!-- Completed Today Card -->
            <VBox alignment="CENTER" spacing="10" 
                  style="-fx-background-color: #E8F5E8; -fx-padding: 20; 
                         -fx-border-color: #2ECC71; -fx-border-width: 1; 
                         -fx-border-radius: 8; -fx-background-radius: 8;" 
                  GridPane.columnIndex="2">
               <children>
                  <Label text="✅" style="-fx-font-size: 32px;" />
                  <Label fx:id="completedTodayLabel" text="0" textFill="#2ECC71" 
                         style="-fx-font-size: 28px; -fx-font-weight: bold;" />
                  <Label text="Completed Today" textFill="#2ECC71" 
                         style="-fx-font-size: 14px; -fx-font-weight: bold;" />
               </children>
            </VBox>
         </children>
      </GridPane>

      <!-- Quick Actions -->
      <VBox spacing="15">
         <children>
            <Label text="Quick Actions" textFill="#2E86AB" 
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            
            <HBox spacing="15" alignment="CENTER_LEFT">
               <children>
                  <Button fx:id="newPrescriptionButton" text="➕ New Prescription" 
                          style="-fx-background-color: #2ECC71; -fx-text-fill: white; 
                                 -fx-background-radius: 8; -fx-padding: 12 24; 
                                 -fx-font-weight: bold; -fx-font-size: 14px;" 
                          onAction="#showNewPrescriptionForm" />
                  
                  <Button fx:id="refreshPrescriptionsButton" text="🔄 Refresh List" 
                          style="-fx-background-color: #3498DB; -fx-text-fill: white; 
                                 -fx-background-radius: 8; -fx-padding: 12 24; 
                                 -fx-font-weight: bold; -fx-font-size: 14px;" 
                          onAction="#refreshPrescriptionsList" />
                  
                  <Button fx:id="reviewPrescriptionsButton" text="📋 Review Pending" 
                          style="-fx-background-color: #F18F01; -fx-text-fill: white; 
                                 -fx-background-radius: 8; -fx-padding: 12 24; 
                                 -fx-font-weight: bold; -fx-font-size: 14px;" 
                          onAction="#showPendingReviews" />
               </children>
            </HBox>
         </children>
      </VBox>
      
      <!-- Current Prescriptions Section -->
      <VBox spacing="15">
         <children>
            <!-- Header with Search and Filter -->
            <HBox spacing="15" alignment="CENTER_LEFT">
               <children>
                  <Label text="📋 Current Prescriptions" textFill="#34495E" 
                         style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                  
                  <Region HBox.hgrow="ALWAYS" />
                  
                  <ComboBox fx:id="statusFilterComboBox" promptText="Filter by status..." 
                            prefWidth="150" />
                  
                  <TextField fx:id="searchField" promptText="Search prescriptions..." 
                             style="-fx-background-radius: 6; -fx-border-radius: 6; 
                                    -fx-border-color: #DEE2E6; -fx-border-width: 1; 
                                    -fx-padding: 8 12;" 
                             prefWidth="250" />
               </children>
            </HBox>
            
            <!-- Prescriptions Table -->
            <TableView fx:id="prescriptionsTable" prefHeight="350" VBox.vgrow="ALWAYS"
                       style="-fx-border-color: #dfe6e9; -fx-border-width: 1; 
                              -fx-background-radius: 8; -fx-border-radius: 8;">
               <columns>
                  <TableColumn fx:id="patientNameColumn" text="Patient" prefWidth="150" />
                  <TableColumn fx:id="prescriptionDateColumn" text="Date" prefWidth="120" />
                  <TableColumn fx:id="medicinesColumn" text="Medicines" prefWidth="200" />
                  <TableColumn fx:id="statusColumn" text="Status" prefWidth="100" />
                  <TableColumn fx:id="reviewStatusColumn" text="Review Status" prefWidth="120" />
                  <TableColumn fx:id="actionsColumn" text="Actions" prefWidth="200" />
               </columns>
            </TableView>
         </children>
      </VBox>
      
      <!-- New Prescription Form -->
      <VBox fx:id="prescriptionFormContainer" visible="false" managed="false" spacing="20" 
            style="-fx-background-color: #F8F9FA; -fx-padding: 25; 
                   -fx-border-color: #DEE2E6; -fx-border-width: 1; 
                   -fx-border-radius: 10; -fx-background-radius: 10;">
         <children>
            <Label fx:id="formTitleLabel" text="New Prescription" textFill="#2E86AB" 
                   style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            
            <GridPane hgap="20" vgap="15">
               <columnConstraints>
                  <ColumnConstraints hgrow="NEVER" minWidth="120" />
                  <ColumnConstraints hgrow="ALWAYS" />
                  <ColumnConstraints hgrow="NEVER" minWidth="120" />
                  <ColumnConstraints hgrow="ALWAYS" />
               </columnConstraints>
               
               <!-- Row 0: Patient and Date -->
               <children>
                  <Label text="Patient:" textFill="#34495E" 
                         style="-fx-font-size: 14px; -fx-font-weight: bold;" 
                         GridPane.columnIndex="0" GridPane.rowIndex="0" />
                  
                  <ComboBox fx:id="patientComboBox" promptText="Select patient..." 
                            prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                  
                  <Label text="Date:" textFill="#34495E" 
                         style="-fx-font-size: 14px; -fx-font-weight: bold;" 
                         GridPane.columnIndex="2" GridPane.rowIndex="0" />
                  
                  <DatePicker fx:id="prescriptionDatePicker" 
                              prefWidth="200" GridPane.columnIndex="3" GridPane.rowIndex="0" />
               </children>
            </GridPane>
            
            <!-- Medicines Section -->
            <VBox spacing="10">
               <children>
                  <Label text="Medicines:" textFill="#34495E" 
                         style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                  
                  <HBox spacing="10" alignment="CENTER_LEFT">
                     <children>
                        <ComboBox fx:id="medicineComboBox" promptText="Select medicine..." 
                                  prefWidth="200" />
                        
                        <TextField fx:id="dosageField" promptText="Dosage" 
                                   prefWidth="100" />
                        
                        <TextField fx:id="frequencyField" promptText="Frequency" 
                                   prefWidth="100" />
                        
                        <Button fx:id="addMedicineButton" text="➕ Add" 
                                style="-fx-background-color: #3498DB; -fx-text-fill: white; 
                                       -fx-background-radius: 6; -fx-padding: 8 16;" 
                                onAction="#addMedicineToList" />
                     </children>
                  </HBox>
                  
                  <VBox spacing="10" 
                        style="-fx-background-color: #F8F9FA; -fx-padding: 15; 
                               -fx-border-color: #DEE2E6; -fx-border-width: 1; 
                               -fx-border-radius: 8; -fx-background-radius: 8;">
                     <children>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                           <children>
                              <Label text="📋 Added Medicines:" 
                                     style="-fx-font-weight: bold; -fx-text-fill: #2E86AB; -fx-font-size: 14px;" />
                              <Label fx:id="medicinesCountLabel" text="(0 medicines)" 
                                     style="-fx-text-fill: #666; -fx-font-size: 12px;" />
                           </children>
                        </HBox>
                        
                        <ListView fx:id="medicinesListView" prefHeight="150" 
                                  style="-fx-border-color: #DEE2E6; -fx-border-width: 1; 
                                         -fx-border-radius: 6; -fx-background-radius: 6;
                                         -fx-background-color: white; -fx-padding: 5;">
                           <placeholder>
                              <Label text="No medicines added yet. Select a medicine and click 'Add' to include it in the prescription." 
                                     style="-fx-text-fill: #666; -fx-font-style: italic; -fx-padding: 20;" />
                           </placeholder>
                        </ListView>
                        
                        <HBox spacing="10" alignment="CENTER_RIGHT">
                           <children>
                              <Button fx:id="removeMedicineButton" text="🗑️ Remove Selected" 
                                      style="-fx-background-color: #E74C3C; -fx-text-fill: white; 
                                             -fx-background-radius: 6; -fx-padding: 8 16; 
                                             -fx-font-weight: bold;" 
                                      onAction="#removeSelectedMedicine" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
            
            <!-- Notes Section -->
            <VBox spacing="10">
               <children>
                  <Label text="Notes:" textFill="#34495E" 
                         style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                  
                  <TextArea fx:id="notesTextArea" promptText="Enter prescription notes..." 
                            prefHeight="80" 
                            style="-fx-border-color: #DEE2E6; -fx-border-width: 1; 
                                   -fx-border-radius: 6; -fx-background-radius: 6;" />
               </children>
            </VBox>
            
            <!-- Form Buttons -->
            <HBox spacing="15" alignment="CENTER_RIGHT">
               <children>
                  <Button fx:id="cancelButton" text="Cancel" 
                          style="-fx-background-color: #95A5A6; -fx-text-fill: white; 
                                 -fx-background-radius: 6; -fx-padding: 10 20;" 
                          onAction="#cancelForm" />
                  
                  <Button fx:id="saveButton" text="Save Prescription" 
                          style="-fx-background-color: #2ECC71; -fx-text-fill: white; 
                                 -fx-background-radius: 6; -fx-padding: 10 20;" 
                          onAction="#savePrescription" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
